<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <!-- Nome da aplicação -->
    <contextName>AProove</contextName>

    <!-- Log para console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cyan(%d{"dd/MM/yyyy HH:mm:ss,SSS"}) %green(%.15mdc{IP}) %yellow(%mdc{USER:-}) %highlight(%m) [%file:%line]%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
